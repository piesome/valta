{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "Common/*": ["src/Common/*"],
      "GameServer/*": ["src/GameServer/*"],
      "Shell/*": ["src/Shell/*"],
      "Client/*": ["src/Client/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".git",
    ".vscode",
    "*.spec.ts",
    "dist"
  ]
}
